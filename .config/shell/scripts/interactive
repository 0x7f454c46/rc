#!/bin/bash
# This should be exported from interactive shell.
# Those exports are for launching by hands, not for scripts.

function pipes()
{
	~/.config/shell/scripts/fun/pipes.sh -p3 -r6000
}

function invaiders()
{
	~/.config/shell/scripts/fun/invaiders.sh
}

function mount_smb()
{
	mkdir -p /tmp/samba/
	smbnetfs -o direct_io,readdir_ino /tmp/samba/ ||		\
		echo "Can't mount \`smbnetfs\`, error: $?"
}

